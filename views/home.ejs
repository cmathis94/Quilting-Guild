  <div class="container">
    <div class="columns content is-normal">
      <div class="column is-full mt-5">
        <div class="columns is-centered mb-0">
          <div class="column is-10 pt-0">
            <figure class="image">
              <img
                src="/img/MSQG_Logo.png"
                alt=""
                style="max-height: 85%; max-width: 85%"
