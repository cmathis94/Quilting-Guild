<%= layout('layouts/boilerplate') %>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="row mt-4">
        <div class="col">
          <figure class="figure-img text-center">
            <img
              src="/img/MSQG_Logo.png"
              alt=""
              class="img-fluid"
              style="max-height: 50%; max-width: 50%"
            />
          </figure>
        </div>
      </div>
      <div class="row align-items-center justify-content-center">
        <div class="col-6 text-center">
          <div class="card shadow">
            <div class="card-body p-5">
              <h1 class="h1">Thank you!</h1>
              <p class="lead mb-1">
                We appreciate you contacting us! One of our colleagues will get
                back in touch with you soon.
              </p>
              <p class="lead">Have a great day!</p>
              <figcaption class="blockquote-footer mt-0">
                Main Street Quilt Guild
              </figcaption>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
